<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/grid_col1"
        style="@style/grid_table_cell"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grid_col2"
        style="@style/grid_table_cell"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/grid_col3"
        app:layout_constraintStart_toEndOf="@+id/grid_col1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grid_col3"
        style="@style/grid_table_cell"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/grid_col4"
        app:layout_constraintStart_toEndOf="@+id/grid_col2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grid_col4"
        style="@style/grid_table_cell"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/grid_col5"
        app:layout_constraintStart_toEndOf="@+id/grid_col3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grid_col5"
        style="@style/grid_table_cell"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>