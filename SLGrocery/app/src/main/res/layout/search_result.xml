<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/input_controller_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_item_code"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_item_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_item_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_item_quantity"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_item_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_item_price"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_item_taxable"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_item_taxable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/fragment_search_del_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_list_del_btn"
        android:background="#FF0000"/>

</LinearLayout>